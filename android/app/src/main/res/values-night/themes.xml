<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BursaTaksi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#5EC5FF</item>
        <item name="colorPrimaryVariant">#1D96FF</item>
        <item name="colorOnPrimary">#23353F</item>

        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">#23353F</item>
        <item name="colorOnSecondary">#1D96FF</item>

        <item name="colorSurface">@color/dark_gray</item>

        <item name="android:statusBarColor">#7BCFFF</item>

        <item name="android:windowBackground">@color/dark_gray</item>
